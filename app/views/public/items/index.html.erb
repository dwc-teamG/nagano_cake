<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render "genre_search", genres: @genres %>
    </div>
    <div class="col-10">
      <h4 class="bg-light col-3 text-center mb-4">商品一覧(全<%= @items.count %>件)</h4>
      <div class="item_index d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="item_box mr-3">
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_item_image(200,200) %>
            <% end %>
            <br><div class="badge">商品名：<%= item.name %></div>
            <br><div class="badge">¥<%= item.add_tax_price.to_s(:delimited) %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>