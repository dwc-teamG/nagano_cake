<h5>新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div>
    <h5>名前</h5>
      <div class="field">
        <%= f.label :性 %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :名 %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
  </div>

  <div>
    <h5>フリガナ</h5>
      <div class="field">
        <%= f.label :セイ %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :メイ %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
  </div>

  <div>
    <h5>メールアドレス</h5>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  </div>

  <div>
    <h5>郵便番号(ハイフンなし)</h5>
      <div class="field">
        <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
      </div>
  </div>

  <div>
    <h5>住所</h5>
      <div class="field">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
  </div>

  <div>
    <h5>電話番号(ハイフンなし)</h5>
      <div class="field">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "post_number" %>
      </div>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
