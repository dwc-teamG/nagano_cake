<div class="container">
  <h3 class="bg-light col-3 text-center mb-5">新規会員登録</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <%= f.label "名前", class: "col-2" %>
        <%= f.label "(姓)", class: "offset-1 col-1" %>
        <%= f.text_field :last_name, autocomplete: "last_name", autofocus: true, placeholder: "令和", class: "form-control col-3" %>
        <%= f.label "(名)", class: "offset-1 col-1" %>
        <%= f.text_field :first_name, autocomplete: "first_name",autofocus: true, placeholder: "道子", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <%= f.label "フリガナ", class: "col-2" %>
        <%= f.label "(セイ)", class: "offset-1 col-1" %>
        <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", autofocus: true, placeholder: "レイワ", class: "form-control col-3" %>
        <%= f.label "(メイ)", class: "offset-1 col-1" %>
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", autofocus: true, placeholder: "ミチコ", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <%= f.label "メールアドレス", class: "col-4" %>
        <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "sample@example.com", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <%= f.label "郵便番号(ハイフンなし)", class: "col-4" %>
        <%= f.text_field :post_number, autocomplete: "post_number", autofocus: true, placeholder: "0000000", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <%= f.label "住所", class: "col-4" %>
        <%= f.text_field :address, autocomplete: "address", autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-7" %>
    </div>
    <div class="form-group row">
      <%= f.label "電話番号(ハイフンなし)", class: "col-4" %>
        <%= f.text_field :phone_number, autocomplete: "post_number", autofocus: true, placeholder: "0000000000", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <div class="password-form col-4">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-3" %>
    </div>
    <div class="form-group row">
      <%= f.label "パスワード(確認用)", class: "col-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-3" %>
    </div>
    <div class="col-2 mb-3">
      <%= f.submit "新規登録", class: "btn btn-block btn-success" %>
    </div>
  <% end %>
  <div class="row">
    <p>
    既に登録済みの方は<strong><%= render "public/shared/links" %></strong>からログインしてください。
    </p>
  </div>
</div>