<div class="my-5 ml-5">
  <h3 class="bg-light">新規会員登録</h3>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row ml-5">
    <%= f.label "名前", class: "col-1" %>
      <%= f.label "(性)", class: "mr-3 offset-1" %>
      <%= f.text_field :last_name, autocomplete: "last_name", autofocus: true, placeholder: "令和", class: "col-sm-2" %>
      <%= f.label "(名)", class: "mr-3 offset-1" %>
      <%= f.text_field :first_name, autocomplete: "first_name",autofocus: true, placeholder: "道子", class: "col-sm-2" %>
  </div>

  <div class="form-group row ml-5">
    <%= f.label "名前", class: "col-1" %>
      <%= f.label "(セイ)", class: "mr-3 offset-1" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", autofocus: true, placeholder: "レイワ", class: "col-sm-2" %>
      <%= f.label "(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div>
    <h5>メールアドレス</h5>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
  </div>

  <div>
    <h5>郵便番号(ハイフンなし)</h5>
      <div class="field">
        <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
      </div>
  </div>

  <div>
    <h5>住所</h5>
      <div class="field">
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
  </div>

  <div>
    <h5>電話番号(ハイフンなし)</h5>
      <div class="field">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "post_number" %>
      </div>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
  </div>
<% end %>

<span>
  既に登録済みの方<br>
  <%= render "public/shared/links" %>
  からログインしてください。
</span>
