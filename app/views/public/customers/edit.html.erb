<span>会員情報編集</span>
<%= form_with model: @customer, url: my_page_update_customers_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name %><%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :post_number %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  </div>
<% end %>