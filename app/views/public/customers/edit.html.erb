<div class="container">
  <div class="mb-5">
    <h3 class="text-center col-3", style="background-color: #FFE4E1">会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: my_page_update_customers_path, method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label "氏名", class: "col-3" %>
        <%= f.text_field :last_name, class: "form-control col-3 mr-3" %>
        <%= f.text_field :first_name, class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label "フリガナ", class: "col-3" %>
        <%= f.text_field :last_name_kana, class: "form-control col-3 mr-3"  %>
        <%= f.text_field :first_name_kana, class: "form-control col-3"  %>
      </div>

      <div class="form-group row">
        <%= f.label "郵便番号", class: "col-3" %>
        <%= f.text_field :post_number, class: "form-control col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label "住所", class: "col-3" %>
        <%= f.text_field :address, class: "form-control col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label "電話番号", class: "col-3" %>
        <%= f.text_field :phone_number, class: "form-control col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label "メールアドレス", class: "col-3" %>
        <%= f.text_field :email, autofocus: true, class: "form-control col-8" %>
      </div>

      <div class="mb-5">
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to '退会する', unsubscribe_customers_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>