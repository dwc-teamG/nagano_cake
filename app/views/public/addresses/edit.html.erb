<div class="container">
  <div class="ml-5 mb-5">
    <h3 class="text-center col-3", style="background-color: #FFE4E1">配送先編集</h3>
  </div>
  <div class="row">
    <div class="col-11 offset-1 mb-5">
    <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label "郵便番号（ハイフンなし）", class: "col-3" %>
        <%= f.text_field :post_number, placeholder: "0000000", class: "form-control col-2" %>
      </div>
      <div class="form-group row">
        <%= f.label :住所, class: "col-3" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-5" %>
      </div>
      <div class="form-group row">
        <%= f.label :宛名, class: "col-3" %>
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-3" %>
        <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm px-4 col-2 offset-2" %>
      </div>
    <% end %>
    </div>
  </div>
</div>