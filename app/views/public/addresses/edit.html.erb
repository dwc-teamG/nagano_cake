<div>
  <h3>配送先編集</h3>
</div>

<div>
<%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label "郵便番号（ハイフンなし）", class: "col-3" %>
    <%= f.text_field :post_number, class: "col-3" %>
  </div>
  <div class="form-group row">
    <%= f.label :住所, class: "col-3" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "last_name", class: "form-control col-3 mr-3" %>
  </div>

  <div class="form-group row">
    <%= f.label :宛名, class: "col-3" %>
    <%= f.text_field :name, class: "form-control col-3 mr-3" %>
  </div>

  <div>
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
  </div>
<% end %>

</div>