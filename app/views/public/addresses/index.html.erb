<div class="container my-4">
  <div class="row mt-3">
    <div>
      <h4 class="bg-light">配送先登録/一覧</h4>
    </div>
    <%= form_with model:@address,local:true do |f| %>
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_number %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address %>
    </div>
    <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_area :name %>
    </div>
    <div class="form-group">
      <%= f.submit "新規登録",class: 'btn btn-success' %>
    </div>
    <% end %>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </thead>
      <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= order_details.sum(:amount) %></td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
      </tbody>
  　</table>

  </div>
</div>