<div class="container">
  <div class="row">
      <h4 style="background-color: #FFE4E1">配送先登録/一覧</h4>
  </div>
    <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
    <div class="form-group row">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-4"%>
      <%= f.text_field :post_number, placeholder: "0000000", class: "form-control col-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :住所, class: "col-4" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-5" %>
    </div>
    <div class="form-group row">
      <%= f.label :宛名, class: "col-4" %>
      <%= f.text_field :name, placeholder: "令和道子", class: "form-control col-3" %>
      <%= f.submit "新規登録", class: "btn btn-success btn-sm px-4 col-2 offset-2" %>
    </div>
    <% end %>
    <div>
    <table class="table table-bordered table-background">
      <thead style="background-color: #FFE4E1">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody style="background-color: white">
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_number %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集", edit_address_path(address.id) %></td>
        <td><%= link_to "削除", address_path(address.id), method: :delete %></td>
      </tr>
      <% end %>
      </tbody>
  　</table>
  　</div>
  　</div>
</div>