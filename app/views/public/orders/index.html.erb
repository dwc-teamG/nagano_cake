<div class="container my-4">
  <div class="row mt-7">
    <h4 class="bg-light">注文履歴一覧</h4>
  </div>

  <div class="row mt-3">
    <table class="table table-bordered col-12">
      <thead class="thead-light">
        <tr>
          <th style="width: 15%">注文日</th>
          <th style="width: 40%">配送先</th>
          <th style="width: 15%">注文商品</th>
          <th style="width: 10%">支払金額</th>
          <th style="width: 10%">ステータス</th>
          <th style="width: 10%">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              〒<%= order.post_number %>
              <%= order.address %><br>
              <%= order.name %><br>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td><%= order.order_status_i18n %></td>
            <td>
              <div class="d-flex justify-content-center">
                <%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm mt-3" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>