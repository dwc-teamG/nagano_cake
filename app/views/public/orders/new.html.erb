<div class="row pl-5">
  <h4 class="bg-light col-2">注文情報入力</h4>
</div>

　<div class="px-5 text-background">
 　<%= form_with model:@order, url: "/orders/:order_id/confirm", method: :post do |f| %>
 　　<h4>支払方法</h4>
 　　 <div class="field form-group pl-4">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %><br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer] %>
  　　</div>

     <h4>お届け先</h4>
  　<div class="field form-group pl-4">
     <%= f.radio_button :select_address,0 %><%= f.label :ご自身の住所 %>
     <div class="pl-4 mb-2">
      〒<%= current_customer.post_number %><br>
      <%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %><br>
     </div>

      <%= f.radio_button :select_address,1 %><%= f.label :登録済みの住所から選択 %>
      <div class="pl-4 mb-2">
       <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_was) %>
      </div>

       <%= f.radio_button :select_address,2 %><%= f.label :新しいお届け先 %>
       <div class="pl-4 row">
         <div class="col-9">
           <div class="row mb-2">
             <%= f.label  :郵便番号（ハイフンなし）, class: "col-4" %>
             <%= f.text_field :post_number, placeholder: "0000000", class: "col-2" %>
            </div>
            <div class="row mb-2">
              <%= f.label :住所, class: "col-4" %>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町", class: "col-5" %>
             </div>
             <div class="row mb-2">
             <%= f.label :宛名, class: "col-4" %>
             <%= f.text_field :name, placeholder: "令和道子", class: "col-3" %>
             </div>
          </div>
    </div>
  </div>
  <div class="field form-group row mt-5">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary col-2 offset-5 btn-lg" %>
  </div>
  <% end %>
</div>