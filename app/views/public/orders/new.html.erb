<div class="container">

 <div class="row pl-5">
  <h4 style="background-color: #FFE4E1">注文情報入力</h4>
 </div>

 <%= form_with model:@order, url: "/orders/:order_id/confirm", method: :post do |f| %>

　<div class="row form-group pl-5">
　 <div class="col-4">
　  <h4><b>支払方法</b></h4>
　 </div>
　 <div class="col-8">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer] %>
   </div>
　</div>

　<div class="row form-group pl-5">
　 <div class="col-4 mb-4">
    <h4><b>お届け先</b></h4>
   </div>
   <div class="col-8">
    <%= f.radio_button :select_address,0 %>
    <b><%= f.label :ご自身の住所 %></b><br>
    <p class="ml-3">〒<%= current_customer.post_number %><%= current_customer.address %><br>
                  <%= current_customer.last_name %><%= current_customer.first_name %></p>

    <div class="my-1"></div>

    <%= f.radio_button :select_address,1 %>
    <b><%= f.label :登録済みの住所から選択 %></b><br>
    <div class="ml-3"><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_was) %></div>

    <div class="my-1"></div>

    <%= f.radio_button :select_address,2 %>
    <b><%= f.label :新しいお届け先 %></b>
    <table class="table table-borderless">
     <tr>
      <td><%= f.label  :郵便番号（ハイフンなし）%></td>
      <td><%= f.text_field :post_number, :size=>"40", placeholder: "0000000"%></td>
     </tr>
     <tr>
      <td><%= f.label :住所 %></td>
      <td><%= f.text_field :address, :size=>"40", placeholder: "東京都渋谷区代々木神園町"%></td>
     </tr>
     <tr>
      <td><%= f.label :宛名 %></td>
      <td><%= f.text_field :name, :size=>"40", placeholder: "令和道子"%></td>
     </tr>
    </table>
   </div>
  </div>

  <div class="row form-group">
   <div class="mx-auto">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
   </div>
  </div>

 <% end %>

</div>