<div class="container my-4">
  <div class="row mt-7">
  <h4 class="bg-light">注文情報入力</h4>
</div>

<div class="row mt-3">
 <%= form_with model:@order, url: "/orders/:order_id/confirm", method: :post do |f| %>
  <div class="field form-group">
    <div class="col-12">
    <%= f.label :支払方法 %>
    </div>
    <div class="col-12">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %><br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer] %>
  </div>
</div>

  <div class="field form-group">
    <div class="col-10">
      <%= f.label :お届け先 %>
    </div>
    <div class="col-12">
    <%= f.radio_button :select_address,0 %>ご自身の住所<br>
    〒<%= current_customer.post_number %><br>
    <%= current_customer.address %><br>
    <%= current_customer.last_name %><%= current_customer.first_name %><br>

      <div class="my-3"></div>

      <%= f.radio_button :select_address,1 %>登録済住所から選択<br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_was), include_blank: "住所を選択してください" %>

       <div class="my-3"></div>

       <%= f.radio_button :select_address,2 %>新しいお届け先<br>
       <table class="table col-12">
         <tbody>
           <tr>
             <td><%= f.label :郵便番号 %></td>
             <td><%= f.text_field :post_number, placeholder: "0000000", class: "order-form" %></td>
           </tr>

           <tr>
             <td><%= f.label :住所 %></td>
             <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町", class: "order-form" %></td>
           </tr>

           <tr>
             <td><%= f.label :宛名　%></td>
             <td><%= f.text_field :name, placeholder: "令和道子", class: "order-form" %></td>
           </tr>
         </tbody>
       </table>
    </div>
  </div>

  <div class="field form-group">
     <div class="mx-auto">
       <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg px-4 ml-5" %>
     </div>
  </div>
  <% end %>
</div>