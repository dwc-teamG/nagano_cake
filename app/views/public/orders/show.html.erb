<div class="container my-4">
  <div class="row mt-7">
  <h4 class="bg-light">注文履歴一覧</h4>
</div>

  <div class="row">
    <strong>注文情報</strong>
    <table class="table table-bordered">
      <tbody>
        <tr>
        <td class="bg-ligt">注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>

        <tr>
          <td class="bg-light">配送先</td>
          <td>
            〒<%= @order.post_number %><br>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>

        <tr>
          <td class="bg-light">支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>

        <tr>
          <td class="bg-light">ステータス</td>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col">
    <strong>請求情報</strong>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="bg-light">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>

        <tr>
          <td class="bg-light">配送料</td>
          <td><%= @order.charge %></td>
        </tr>

        <tr>
          <td class="bg-light">ご請求額</td>
          <td><%= (@total+@order.charge).to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-10">
    <strong>注文内容</strong>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 65%">商品</th>
          <th style="width: 15%">単価（税込）</th>
          <th style="width: 10%">個数</th>
          <th style="width: 10%">小計</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= @order_detail.item.name %></td>
          <td><%= (@order_detail.item.price*1.1).round.to_s(:delimited) %></td>
          <td><%= @order_detail.amount %></td>
          <td><%= ((order_detail.item.price*1.1)*(order_detail.amount)).round.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>