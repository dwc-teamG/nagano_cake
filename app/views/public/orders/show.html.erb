<div class="container">
  <div class="row">
   <div class="col-11">
    <h4 class="bg-light col-3">注文履歴詳細</h4>
   </div>
 </div>

  <div class="row">
   <div class="col">
    <strong>注文情報</strong>
    <table class="table table-bordered">
     <tbody>
      <tr>
        <td class="bg-light">注文日</td>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <td class="bg-light">配送先</td>
        <td>
          〒<%= @order.post_number %><br>
          <%= @order.address %><br>
          <%= @order.name %><br>
        </td>
      </tr>
      <tr>
        <td class="bg-light">支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td class="bg-light">ステータス</td>
        <td><%= @order.order_status_i18n %></td>
      </tr>
     </tbody>
    </table>
  </div>

  <div class="col">
    <strong>請求情報</strong>
    <table class="table table-bordered">
      <tr>
        <td class="bg-light">商品合計</td>
        <td><%= (@order.total_payment - @order.charge).to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <td class="bg-light">配送料</td>
        <td><%= @order.charge %>円</td>
      </tr>
      <tr>
        <td class="bg-light">ご請求額</td>
       <td><%= @order.total_payment.to_s(:delimited) %>円</td>
      </tr>
    </table>
  </div>
 </div>

  <div class="row">
   <div class="col">
    <strong>注文内容</strong>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 50%">商品</th>
          <th style="width: 15%">単価（税込）</th>
          <th style="width: 15%">個数</th>
          <th style="width: 20%">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr class="table-background">
            <td><%= order_detail.item.name %></td>
            <td><%=(order_detail.item.price*1.1).round.to_s(:delimited)%>円</td>
            <td><%= order_detail.amount %>個</td>
            <td><%=((order_detail.item.price*1.1)*(order_detail.amount)).round.to_s(:delimited)%>円</td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
</div>