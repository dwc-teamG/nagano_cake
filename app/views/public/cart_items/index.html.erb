<div class="container my-4">
  <div clas="row mt-3">
    <h5 class="bg-light">ショッピングカート</h5>
    <table class="table table-bordered">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(100, 100) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.select :amount, *[1..10], {prompt: "個数選択"} %>
              <%= f.submit '変更', class: 'btn btn-success' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          <% (@total_price += cart_item.subtotal).to_s(:delimited) %>
        </tr>
      <% end %>
        <td><%= @total_price.to_s(:delimited) %></td>
      </tbody>
    </table>
  </div>
</div>
