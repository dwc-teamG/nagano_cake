<div class="container my-4">

  <div class="row mt-3">
    <h4 class="bg-light">商品一覧</h4>
    <span>
      <%= link_to new_admin_item_path, class: "text-secondary ml-2" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </span>
  </div>
  <div class="row mt-3">
    <table class="table table-bordered col-12">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.sale_status == true %>
                <b>販売中</b>
              <% else %>
                <b>販売停止中</b>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @items %>
</div>