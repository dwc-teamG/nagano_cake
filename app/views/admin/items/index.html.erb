<h3>商品一覧</h3>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.sale_status == true %>
            <b>販売中</b>
          <% else %>
            <b>販売停止中</b>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= pagenate @items %>