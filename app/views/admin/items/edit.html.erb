<h2>商品編集</h2>
<%= form_with model: @item do |f| %>
  <div class="form-group">
    <label for="inputImage">商品画像</label>
    <%= f.file_field :item_image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <label for="inputName">商品名</label>
    <%= f.text_field :name, class: 'form-control textfield' %>
  </div>
  <div class="form-group">
    <label for="item_introduction">商品説明</label>
    <%= f.text_area :introduction, class: 'form-control textarea' %>
  </div>
  <div class="form-group">
    <label for="selectGenre">ジャンル</label>
    <%= f.select :genre, {'ケーキ': 1, 'プリン': 2, '焼き菓子': 3, 'キャンディ': 4}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="form-group">
    <label for="inputPrice">税抜価格</label>
    <%= f.text_field :price, class: 'form-control textfield' %> 円
  </div>
  <div class="form-group">
    <%= f.submit '変更を保存', class: 'btn btn-secondary' %>
  </div>
<% end %>