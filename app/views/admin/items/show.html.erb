<h3>商品詳細</h3>
<div>
  <% if @item.item_image.attached? %>
    <%= image_tag @item.item_image, size: "200,200" %>
  <% else %>
     <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
</div>
<table>
  <tbody>
    <tr>
      <td><%= f.label :商品名 %></td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td><%= f.label :商品説明 %></td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td><%= f.label :ジャンル %></td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td><%= f.label :税込価格（税抜価格）%></td>
      <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>） 円</td>
    </tr>
    <tr>
      <td>
        <% if @item.sale_status == true %>
          <b>販売中</b>
        <% else %>
          <b>販売停止中</b>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<div class="form-group">
  <%= f.submit '編集する', class: 'btn btn-secondary' %>
</div>