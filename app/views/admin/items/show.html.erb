<h3>商品詳細</h3>
<div>
  <% if @item.item_image.attached? %>
    <%= image_tag @item.item_image, size: "150,150" %>
  <% else %>
     <%= image_tag 'no_image', size: "150x150" %>
  <% end %>
</div>
<table>
  <tbody>
    <tr>
      <td><label>商品名</label></td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td><label>商品説明</label></td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td><label>ジャンル</label></td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td><label>税込価格（税抜価格）</label></td>
      <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>） 円</td>
    </tr>
    <tr>
      <td>
        <% if @item.sale_status == true %>
          <b>販売中</b>
        <% else %>
          <b>販売停止中</b>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<div class="form-group">
  <%= button_to '編集する', {controller: 'items', action: 'edit'}, {method: :get, class: 'btn btn-secondary'} %>
</div>