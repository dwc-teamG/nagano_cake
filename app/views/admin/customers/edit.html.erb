<div class="container">
  <div class="my-5 bg-light col-5">
    <h3><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h3>
  </div>

  <div>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :id, "会員ID", class: "col-3" %>
        <%= f.label @customer.id, class: "col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :氏名, class: "col-3" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control col-3 mr-3" %>
        <%= f.text_field :first_name, class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :フリガナ, class: "col-3" %>
        <%= f.text_field :last_name_kana, class: "form-control col-3 mr-3" %>
        <%= f.text_field :first_name_kana, class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :post_number, '郵便番号', class: "col-3" %>
        <%= f.text_field :post_number, class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :address, '住所', class: "col-3" %>
        <%= f.text_field :address, class: "form-control col-9" %>
      </div>

      <div class="form-group row">
        <%= f.label :phone_number, '電話番号', class: "col-3" %>
        <%= f.text_field :phone_number, class: "form-control col-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: "col-3" %>
        <%= f.email_field :email, autofocus: true, class: "form-control col-3" %>
      </div>

      <div class="form-gropu row">
        <%= f.label :deleted_flag, '会員ステータス', class: "col-3" %>
        <div>
          <%= f.radio_button :deleted_flag, false %>有効
          <%= f.radio_button :deleted_flag, true %>退会
        </div>
      </div>

      <div>
        <%= f.submit "変更を保存", class: "btn btn-success mt-3 mb-3 offset-3" %>
      </div>
    <% end %>
  </div>
</div>