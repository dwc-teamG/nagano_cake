<div class="container my-4">
  <div class="row mt-3">
  <h4 class="bg-light">ジャンル一覧・追加</h4>
</div>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

<div class="field form-group">
  <%= f.label :ジャンル名, class: "mr-5" %>
  <%= f.text_field :name, placeholder: "ジャンル名", class: "genre-form" %>
 <%= f.submit "新規登録", class: "btn btn-success btn-sm px-4 ml-5" %>
</div>
<% end %>

<table class="table col-3">
  <thead class="thead-light">
    <tr>
      <th>ジャンル名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する" , edit_admin_genre_path(genre), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>