<div class="container my-4">
  <div class="row mt-3">
  <h4 class="bg-light">ジャンル編集</h4>
</div>

<div class="field form-group">
  <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
  <%= f.label :ジャンル名, class: "mr-5" %>
  <%= f.text_field :name, placeholder: "ジャンル名", class: "genre-form" %>
  <%= f.submit "変更を保存",  class: "btn btn-success btn-sm px-4 ml-5" %>
<% end %>

</div>