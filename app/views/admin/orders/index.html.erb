<div class="container my-4">
  <div class="row mb-4">
  <h4 style="background-color: #FFE4E1">注文履歴一覧</h4>
</div>

  <div class="row mt-3">
    <table class="table table-bordered">
      <thead  style="background-color: #FFE4E1">
        <tr>
           <th style="width: 30%">購入日時</th>
           <th style="width: 20%">購入者</th>
           <th style="width: 20%">注文個数</th>
           <th style="width: 30%">注文ステータス</th>
        </tr>
      </thead>
  </div>

    <tbody bgcolor="#fff">
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to admin_order_path(order) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
        <% end %>
        </td>
        <td><%= order.name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

    <div class="container my-4">
    <div class="row mt-3">
      <div class="col-md-4 offset-md-4 py-2 mt-5">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>