<div class="container">
  <div class="row">
  <h3 class="bg-light">注文履歴一覧</h3>
</div>

<table class="table col-3">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    </thead>
    
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= link_to admins_order_path(order) do %>
        <%= order.created_at.strftime('%Y/%m/%d %H:%M') %> 
        <% end %>
        </td>
        <td><%= order.name %></td>
        <td><%= order_details.amount %></td>
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </tbody>
    
    <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4 py-2 mt-5">
        <%= paginate @orders %>
      </div>
    </div>
  </div>