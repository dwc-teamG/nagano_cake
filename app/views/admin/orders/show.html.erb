<div class="container my-4">
  <div class="row mt-3">
  <h4 class="bg-light">注文履歴詳細</h4>
</div>

<table class="table col-3">
  <tbody>
    <tr>
      <th>購入者</th>
      <td><%= order.name %></td>
    </tr>

    <tr>
      <th>注文日</th>
      <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    </tr>

    <tr>
      <th>配送先</th>
      <td>
        〒<%= order.post_number %><%= order.address %><br>
          <%= order.name %><br>
      </td>
    </tr>

    <tr>
      <th>支払方法</th>
      <td><%= order.payment_method_i18n %></td>
    </tr>

    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, url: admins_order_path, method: :patch do |f| %>
        <%= f.select :order_status, Order.order_status_i18n.invert %>
        <%= f.submit "更新", class: "btn btn-success btn-sm px-4 ml-5" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table col-3">
  <thead class="thead-light">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= (order_detail.item.price*1.1).round.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= ((order_detail.item.price*1.1).round*(order_detail.amount)).to_s(:delimited) %></td>
      <td>
        <%= form_with model: order_detail, url:  admin_order_detail_path(order_detail), method: :patch do |f| %>
        <%= f.select :production_status, OrderDetail.production_status_i18n.invert %>
        <%= f.submit "更新", class: "btn btn-success btn-sm px-4 ml-5" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table col-3">
  <tr>
    <th>商品合計</th>
    <td><%= @total.to_s(:delimited) %>円</td>
  </tr>

  <tr>
    <th>送料</th>
    <td><%= @order.charge.to_s(:delimited) %>円</td>
  </tr>

  <tr>
    <th>請求金額合計</th>
    <td><%= (@total+@order.charge).to_s(:delimited) %>円</td>
  </tr>
</table>